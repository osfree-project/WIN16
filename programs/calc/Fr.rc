      MENUITEM "Standard",         IDM_MODE_STANDARD
      MENUITEM "Scientific",       IDM_MODE_SCIENTIFIC
      MENUITEM SEPARATOR
      MENUITEM "Digit Grouping",   IDM_DIGIT_GROUPING
